<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"
        tools:ignore="CoarseFineLocation" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudyBuddy"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />


        <!-- LAUNCHER (Login) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AUTH -->
        <activity
            android:name=".SignupActivity"
            android:exported="false" />

        <!-- 5 Bottom Navigation Pages -->
        <activity
            android:name=".home.HomeActivity"
            android:exported="false" />

        <activity
            android:name=".modules.ModulesActivity"
            android:exported="false" />

        <activity android:name=".modules.ModuleDetailActivity" />

        <activity
            android:name=".tasks.TasksActivity"
            android:exported="false" />

        <activity
            android:name=".tasks.TaskDetailActivity"
            android:exported="false"/>

        <activity
            android:name=".profile.ProfileActivity"
            android:exported="false" />

        <activity android:name=".focus.FocusActivity" />
        <activity android:name=".focus.FocusTimerActivity" />
        <activity android:name=".focus.StudySpotActivity" />

    </application>

</manifest>
